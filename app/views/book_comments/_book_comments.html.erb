            <div class="comments">
              <p>コメント件数：<%= book.book_comments.count %></p>
              <% book.book_comments.each do |book_comment| %>
                <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
                User：<%= book_comment.user.name %>
                <p><%= book_comment.created_at.strftime('%Y/%m/%d') %>：<%=book_comment.comment %></p>
                    <% if book_comment.user == current_user %>
                    <div class="comment-delete">
                      <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true %>
                    </div>
                    <% end %>
              <% end %>
              </div>